<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hogar_rural">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hogar_rural"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".UserAccountActivity"></activity>
        <activity
            android:name=".LoginFormActivity"
            android:parentActivityName=".MyProfileActivity" />
        <activity
            android:name=".DetailHouseActivity"
            android:parentActivityName=".ExplorerActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- EXPLORAR -->
        <activity android:name=".ExplorerActivity" />
        <activity
            android:name=".MapActivity"
            android:parentActivityName=".ExplorerActivity" />
        <activity
            android:name=".FiltersActivity"
            android:parentActivityName=".ExplorerActivity" /> <!-- MI PERFIL -->
        <activity
            android:name=".MyProfileActivity"
            android:parentActivityName=".ExplorerActivity" /> <!-- DESTACADOS -->
        <activity
            android:name=".OutstandingActivity"
            android:parentActivityName=".ExplorerActivity" /> <!-- FAVORITOS -->
        <activity
            android:name=".FavoriteActivity"
            android:parentActivityName=".ExplorerActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>