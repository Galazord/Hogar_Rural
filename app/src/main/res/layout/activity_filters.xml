                    <!-- Botón Toggle spa -->
                    <ToggleButton
                        android:id="@+id/tbFilter_spa"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
