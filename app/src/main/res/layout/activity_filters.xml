                    <!-- Texto: Wifi -->
                    <TextView
                        android:id="@+id/tvFilter_txtWifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
