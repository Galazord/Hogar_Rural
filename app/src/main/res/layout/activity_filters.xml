<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltersActivity"
    android:background="@color/background_grey">

    <ScrollView
        android:id="@+id/FilterScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/FilterRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--**************** BLOQUE 1 -> Selector de número de personas - ****************-->
            <LinearLayout
                android:id="@+id/LLFilter_num_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp">

                <!-- Botón Nº personas - -->
                <Button
                    android:id="@+id/btnLessPerson"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_less"
                    android:textSize="36sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

                <!-- Indicador de número de personas -->
                <TextView
                    android:id="@+id/tvFilter_nPersons"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/filters_nPersons"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Botón Nº personas + -->
                <Button
                    android:id="@+id/btnPlusPerson"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_plus"
                    android:textSize="36sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

            </LinearLayout>

            <!--**************** BLOQUE 2 -> Seleccionar fecha de entrada/salida - ****************-->
            <RelativeLayout
                android:id="@+id/RLFilter_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLFilter_num_person"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp">

                <!-- Texto ENTRADA-->
                <TextView
                    android:id="@+id/tvFilter_entrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/filters_entrance"
                    android:fontFamily="@font/lemon"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

                <!-- Indicador la fecha de entrada-->
                <TextView
                    android:id="@+id/tvFilter_input_entrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFilter_entrance"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/green_icon"
                    android:hint="@string/filters_choose"
                    android:textColorHint="@color/green_light_icon"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp" />

                <!-- Icono de flecha separatoria-->
                <ImageView
                    android:id="@+id/ivFilter_arrow"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow"/>

                <!-- Texto SALIDA-->
                <TextView
                    android:id="@+id/tvFilter_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/filters_exit"
                    android:fontFamily="@font/lemon"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

                <!-- Indicador la fecha de salida-->
                <TextView
                    android:id="@+id/tvFilter_input_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFilter_exit"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/green_icon"
                    android:hint="@string/filters_choose"
                    android:textColorHint="@color/green_light_icon"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp" />

            </RelativeLayout>

            <!--**************** BLOQUE 3 -> Selector de valoraciones - ****************-->

            <!-- Texto VALORACIONES-->
            <TextView
                android:id="@+id/tvFilter_txtValoration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RLFilter_calendar"
                android:layout_marginTop="20dp"
                android:text="@string/filters_valorations"
                android:fontFamily="@font/lemon"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/green_icon"/>

            <LinearLayout
                android:id="@+id/LLFilter_valorations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tvFilter_txtValoration"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="30dp">

                <!-- Botón valoraciones - -->
                <Button
                    android:id="@+id/btnLessValoration"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_less"
                    android:textSize="36sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

                <!-- Iconos valoraciones -->
                <LinearLayout
                    android:id="@+id/boxDetailIconsValor"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconTemp"
                        android:layout_width="22dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf_on" />
                    <ImageView
                        android:id="@+id/iconTemp2"
                        android:layout_width="22dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf_on" />
                    <ImageView
                        android:id="@+id/iconTemp3"
                        android:layout_width="22dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf_on" />
                    <ImageView
                        android:id="@+id/iconTemp4"
                        android:layout_width="22dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf_on" />
                    <ImageView
                        android:id="@+id/iconTemp5"
                        android:layout_width="22dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf_on" />


                </LinearLayout>

                <!-- Botón valoraciones + -->
                <Button
                    android:id="@+id/btnPlusValoration"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_plus"
                    android:textSize="36sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

            </LinearLayout>

            <!--**************** BLOQUE 4 -> Tipo de habitaciones - ****************-->
            <!-- Iconos del tipo de casa -->
            <LinearLayout
                android:id="@+id/LLFilter_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LLFilter_valorations"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp">

                <!-- Botón Toggle Íntegro -->
                <ToggleButton
                    android:id="@+id/tbFilter_complete"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="30dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/toggle_selector_complete"/>

                <!-- Botón Toggle Habitaciones -->
                <ToggleButton
                    android:id="@+id/tbFilter_room"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="30dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/toggle_selector_room"/>

            </LinearLayout>

            <!-- Texto información del tipo de casa -->
            <LinearLayout
                android:id="@+id/LLFilter_txtRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/LLFilter_rooms"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="10dp">

                <!-- Texto ÍNTEGRO-->
                <TextView
                    android:id="@+id/tvFilter_txtComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:text="@string/filters_complete"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

                <!-- Texto HABITACIONES-->
                <TextView
                    android:id="@+id/tvFilter_txtRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/filters_rooms"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

            </LinearLayout>

            <!--**************** BLOQUE 5 -> Precios - ****************-->
            <LinearLayout
                android:id="@+id/LLFilter_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/LLFilter_txtRooms"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp">

                <!-- Texto PRECIOS -->
                <TextView
                    android:id="@+id/tvFilter_txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filters_price"
                    android:fontFamily="@font/lemon"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

                <!-- Indicador de número de personas -->
                <TextView
                    android:id="@+id/tvFilter_priceIndicator"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/filters_euros_person"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- SeekBar: barra selectora de precios -->
                <SeekBar
                    android:id="@+id/sbFilter_priceSelector"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="100"
                    android:min="0"
                    android:progress="50"
                    android:progressDrawable="@drawable/track_progress_bar"
                    android:thumb="@drawable/thumb_progress_bar" />

            </LinearLayout>

            <!--**************** BLOQUE 6 -> Iconos de servicios - ****************-->
            <LinearLayout
                android:id="@+id/LLFilter_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/LLFilter_prices"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp">

                <!-- Texto SERVICIOS -->
                <TextView
                    android:id="@+id/tvFilter_txtServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/filters_services"
                    android:fontFamily="@font/lemon"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/green_icon"/>

                <!-- Iconos seleccionables -->
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="6">

                    <!-- Botón Toggle Discapacitados -->
                    <ToggleButton
                        android:id="@+id/tbFilter_adapted"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_adapted" />

                    <!-- Botón Toggle Aire acondicionado -->
                    <ToggleButton
                        android:id="@+id/tbFilter_air"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="30dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_air"/>

                    <!-- Botón Toggle barbacoa -->
                    <ToggleButton
                        android:id="@+id/tbFilter_barbecue"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_barbecue"/>

                    <!-- Botón Toggle baño en habitación -->
                    <ToggleButton
                        android:id="@+id/tbFilter_bath"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_bath"/>

                    <!-- Texto: Minusválidos -->
                    <TextView
                        android:id="@+id/tvFilter_txtAdapted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_adapted"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Aire acondicionado -->
                    <TextView
                        android:id="@+id/tvFilter_txtAir"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_air"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Barbacoa -->
                    <TextView
                        android:id="@+id/tvFilter_txtBarbacue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_barbacue"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Baño en habitación -->
                    <TextView
                        android:id="@+id/tvFilter_txtBath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_bath"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Botón Toggle piscina -->
                    <ToggleButton
                        android:id="@+id/tbFilter_pool"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_pool"/>

                    <!-- Botón Toggle piscina climatizada -->
                    <ToggleButton
                        android:id="@+id/tbFilter_climatized"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_climatized_pool"/>

                    <!-- Botón Toggle jardín -->
                    <ToggleButton
                        android:id="@+id/tbFilter_garden"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_garden"/>

                    <!-- Botón Toggle calefacción -->
                    <ToggleButton
                        android:id="@+id/tbFilter_heating"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_heatingi"/>

                    <!-- Texto: piscina -->
                    <TextView
                        android:id="@+id/tvFilter_txtPool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_pool"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: piscina climatizada -->
                    <TextView
                        android:id="@+id/tvFilter_txtClimatized"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_climatized"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Jardín -->
                    <TextView
                        android:id="@+id/tvFilter_txtGarden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_garden"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Calefacción -->
                    <TextView
                        android:id="@+id/tvFilter_txtHeating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_heating"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Botón Toggle jacuzzi -->
                    <ToggleButton
                        android:id="@+id/tbFilter_jacuzzi"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_jacuzzi"/>

                    <!-- Botón Toggle cocina incluida -->
                    <ToggleButton
                        android:id="@+id/tbFilter_kitchen"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_kitchen"/>

                    <!-- Botón Toggle Montañas-->
                    <ToggleButton
                        android:id="@+id/tbFilter_mountain"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_mountain"/>

                    <!-- Botón Toggle parking -->
                    <ToggleButton
                        android:id="@+id/tbFilter_parking"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_parking"/>

                    <!-- Texto: Jacuzzi -->
                    <TextView
                        android:id="@+id/tvFilter_txtJacuzzi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_jacuzzi"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Cocina integrada -->
                    <TextView
                        android:id="@+id/tvFilter_txtKitchen"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_kitchen"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Montaña -->
                    <TextView
                        android:id="@+id/tvFilter_txtMountain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_mountain"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: Parking -->
                    <TextView
                        android:id="@+id/tvFilter_txtParking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_parking"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Botón Toggle playa -->
                    <ToggleButton
                        android:id="@+id/tbFilter_beach"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_beach"/>

                    <!-- Botón Toggle desayuno incluido -->
                    <ToggleButton
                        android:id="@+id/tbFilter_breakfast"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_breakfast"/>

                    <!-- Botón Toggle zona para niños -->
                    <ToggleButton
                        android:id="@+id/tbFilter_children"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_children"/>

                    <!-- Botón Toggle chimenea -->
                    <ToggleButton
                        android:id="@+id/tbFilter_fireplace"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="OnDefaultToggleClickComplete"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/ic_service_fireplacei"/>

                    <!-- Texto: playa -->
                    <TextView
                        android:id="@+id/tvFilter_txtBeach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_beach"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/green_light_icon" />

                    <!-- Texto: desayuno incluido -->
                    <TextView
                        android:id="@+id/tvFilter_txtBreakfast"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="@string/filters_breakfast"
