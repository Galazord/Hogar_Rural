<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseUpActivity"
    android:background="@color/background_grey">

    <ScrollView
        android:id="@+id/SVHouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RLHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Descripción 1 -->
            <TextView
                android:id="@+id/tvHouse_description_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:text="@string/houseUp_info"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>

            <!-- LinearLayout: Subir la imagen -->
            <LinearLayout
                android:id="@+id/LLHouse_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tvHouse_description_1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical">

                <!-- Imagen de la casa-->
                <ImageView
                    android:id="@+id/ivUser_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_missing_house"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"/>

                <!-- LinearLayout: Texto y botón de la imagen -->
                <LinearLayout
                    android:id="@+id/LLHouse_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Descripción 1 -->
                    <TextView
                        android:id="@+id/tvHouse_description_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:text="@string/houseUp_info2"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/green_dark"
                        android:textSize="16sp"/>

                    <!-- Botón de seleccionar imagen-->
                    <Button
                        android:id="@+id/btnUpAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gradient_green"
                        android:fontFamily="@font/kanit_semibold"
                        android:text="@string/formUser_selectImage"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textScaleX="1.2"
                        android:textColor="@color/white_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Introducir el nombre del lugar -->
            <EditText
                android:id="@+id/etHouse_input_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/LLHouse_1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textColorHint="@color/green_hint2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/houseUp_namePlace"/>

            <!-- Preguntar tipo de casa -->
            <TextView
                android:id="@+id/tvHouse_description_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@+id/etHouse_input_name"
                android:text="@string/houseUp_type"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/RGHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/tvHouse_description_3">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/houseUp_complete"
                    android:onClick="CheckButtonTypeHouse"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/houseUp_rooms"
                    android:onClick="CheckButtonTypeHouse"/>

            </RadioGroup>

            <!-- Contador del número de inquilinos -->
            <TextView
                android:id="@+id/tvCounter_textCapMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RGHouse"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/houseUp_txtPeople"
                android:textColor="@color/green_dark"
                android:textSize="16sp" />

            <!-- Controlador de la capacidad máxima de inquilinos -->
            <LinearLayout
                android:id="@+id/LLHouse_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_horizontal"
                android:layout_below="@id/tvCounter_textCapMax"
                android:orientation="horizontal">

                <!-- Botón disminuir número de inquilinos-->
                <Button
                    android:id="@+id/btnCapMax_less"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_less"
                    android:textAllCaps="false"
                    android:textSize="40sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

                <!-- Contador del número de inquilinos -->
                <TextView
                    android:id="@+id/tvCounter_capMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/houseUp_nPersons"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/green_dark"
                    android:textSize="20sp"/>

                <!-- Botón incrementar número de inquilinos-->
                <Button
                    android:id="@+id/btnCapMax_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_plus"
                    android:textAllCaps="false"
                    android:textSize="40sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

            </LinearLayout>

            <!-- Cantidad del precio por día -->
            <TextView
                android:id="@+id/tvCounter_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLHouse_3"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/houseUp_amount"
                android:textColor="@color/green_dark"
                android:textSize="16sp" />

            <!-- Controlador del precio en euros/día de la estancia -->
            <LinearLayout
                android:id="@+id/LLHouse_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center_horizontal"
                android:layout_below="@id/tvCounter_price"
                android:orientation="horizontal">

                <!-- Botón disminuir precio -->
                <Button
                    android:id="@+id/btnPrice_less"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_less"
                    android:textAllCaps="false"
                    android:textSize="40sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

                <!-- Contador del precio -->
                <TextView
                    android:id="@+id/tvPrice_capMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/houseUp_eurosDay"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/green_dark"
                    android:textSize="20sp"/>

                <!-- Botón incrementar precio -->
                <Button
                    android:id="@+id/btnPrice_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_green"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/filters_symbol_plus"
                    android:textAllCaps="false"
                    android:textSize="40sp"
                    android:textScaleX="1.2"
                    android:textColor="@color/white_text" />

            </LinearLayout>

            <!-- Introducir la dirección postal -->
            <EditText
                android:id="@+id/etHouse_input_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/LLHouse_4"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textColorHint="@color/green_hint2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/formUser_address"/>

            <!-- Introducir la código postal -->
            <EditText
                android:id="@+id/etHouse_input_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/etHouse_input_address"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textColorHint="@color/green_hint2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/formUser_postal"/>

            <!-- Introducir el municipio -->
            <EditText
                android:id="@+id/etHouse_input_municipaly"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/etHouse_input_code"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textColorHint="@color/green_hint2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/formUser_municipatily"/>

            <!-- Introducir la provincia -->
            <EditText
                android:id="@+id/etHouse_input_province"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/etHouse_input_municipaly"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textColorHint="@color/green_hint2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/formUser_province"/>

            <!-- Botón de fechas de disponibilidad de la vivienda-->
            <Button
                android:id="@+id/btnDateAvailable"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etHouse_input_province"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/gradient_green"
                android:fontFamily="@font/kanit_semibold"
                android:text="@string/houseUp_btnDateDisponibility"
                android:textSize="14sp"
                android:textScaleX="1.2"
                android:textColor="@color/white_text"
                android:drawableStart="@drawable/ic_calendar"
                android:paddingStart="30dp"/>

            <!-- Texto: Descripción características principales -->
            <TextView
                android:id="@+id/tvHouse_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDateAvailable"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="@string/houseUp_features"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>

            <!-- Campo texto: Descripción características principales -->
            <EditText
                android:id="@+id/etHouse_input_features"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/tvHouse_features"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium" />

            <!-- Texto: Actividades -->
            <TextView
                android:id="@+id/tvHouse_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etHouse_input_features"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="@string/houseUp_activities"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>

            <!-- Campo texto: Actividades -->
            <EditText
                android:id="@+id/etHouse_input_activities"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/tvHouse_activities"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium" />

            <!-- Texto: Lugares de interés -->
            <TextView
                android:id="@+id/tvHouse_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etHouse_input_activities"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="@string/houseUp_placeInterest"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>

            <!-- Campo texto: Lugares de interés -->
            <EditText
                android:id="@+id/etHouse_input_interest"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/tvHouse_interest"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:alpha="0.6"
                android:background="@drawable/background_corners_2"
                android:ems="10"
                android:fontFamily="@font/roboto_medium" />

            <!-- Texto: Servicios -->
            <TextView
                android:id="@+id/tvHouse_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etHouse_input_interest"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="@string/houseUp_services"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_dark"
                android:textSize="16sp"/>


            <!-- Iconos seleccionables de servicios-->
            <GridLayout
                android:id="@+id/GLHouse_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHouse_services"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:columnCount="4"
                android:rowCount="6">

                <!-- Botón Toggle Discapacitados -->
                <ToggleButton
                    android:id="@+id/tbFilter_adapted"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_adapted" />

                <!-- Botón Toggle Aire acondicionado -->
                <ToggleButton
                    android:id="@+id/tbFilter_air"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="30dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_air"/>

                <!-- Botón Toggle barbacoa -->
                <ToggleButton
                    android:id="@+id/tbFilter_barbecue"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_barbecue"/>

                <!-- Botón Toggle baño en habitación -->
                <ToggleButton
                    android:id="@+id/tbFilter_bath"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_bath"/>

                <!-- Texto: Minusválidos -->
                <TextView
                    android:id="@+id/tvFilter_txtAdapted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_adapted"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: Aire acondicionado -->
                <TextView
                    android:id="@+id/tvFilter_txtAir"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_air"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: Barbacoa -->
                <TextView
                    android:id="@+id/tvFilter_txtBarbacue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_barbacue"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: Baño en habitación -->
                <TextView
                    android:id="@+id/tvFilter_txtBath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_bath"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Botón Toggle piscina -->
                <ToggleButton
                    android:id="@+id/tbFilter_pool"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_pool"/>

                <!-- Botón Toggle piscina climatizada -->
                <ToggleButton
                    android:id="@+id/tbFilter_climatized"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_climatized_pool"/>

                <!-- Botón Toggle jardín -->
                <ToggleButton
                    android:id="@+id/tbFilter_garden"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_garden"/>

                <!-- Botón Toggle calefacción -->
                <ToggleButton
                    android:id="@+id/tbFilter_heating"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_heatingi"/>

                <!-- Texto: piscina -->
                <TextView
                    android:id="@+id/tvFilter_txtPool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_pool"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: piscina climatizada -->
                <TextView
                    android:id="@+id/tvFilter_txtClimatized"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_climatized"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: Jardín -->
                <TextView
                    android:id="@+id/tvFilter_txtGarden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_garden"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Texto: Calefacción -->
                <TextView
                    android:id="@+id/tvFilter_txtHeating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="@string/filters_heating"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/green_light_icon" />

                <!-- Botón Toggle jacuzzi -->
                <ToggleButton
                    android:id="@+id/tbFilter_jacuzzi"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_jacuzzi"/>

                <!-- Botón Toggle cocina incluida -->
                <ToggleButton
                    android:id="@+id/tbFilter_kitchen"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_kitchen"/>

                <!-- Botón Toggle Montañas-->
                <ToggleButton
                    android:id="@+id/tbFilter_mountain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="OnDefaultToggleClickComplete"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_service_mountain"/>

                <!-- Botón Toggle parking -->
                <ToggleButton
